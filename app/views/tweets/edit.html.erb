<div class="contents row">
    <%= form_tag("/tweets/#{@tweet.id}", method: :patch ) do %>
      <h3>
        編集する
      </h3>
      <input placeholder="Image Url" type="text" name="image" value="<%= @tweet.image %>" autofocus="true">
      <textarea cols="30" name="text1" placeholder="名前" rows="1"><%= @tweet.text1 %></textarea>
      <textarea cols="30" name="text2" placeholder="場所" rows="1"><%= @tweet.text2 %></textarea>
      <input placeholder="Map Url" type="text" name="map" value="<%= @tweet.map %>" autofocus="true"> 
      <input type="submit" value="SENT">
    <% end %>
  </div>